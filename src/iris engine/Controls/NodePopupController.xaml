<UserControl x:Class="iris_engine.Controls.NodePopupController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iris_engine.Controls"
             xmlns:ViewModels="clr-namespace:iris_engine.ViewModels"
             xmlns:l="clr-namespace:UIControls;assembly=SearchTextBox"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300"
             Background="{DynamicResource ThemeBrushKey}">
    <Grid>
        <Grid
            Margin="4"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <l:SearchTextBox
                Grid.Row="0"
                ShowSectionButton="False"/>
            <ScrollViewer
                Grid.Row="1">
                
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
